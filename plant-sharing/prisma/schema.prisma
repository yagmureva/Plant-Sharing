generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Plant {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  imageUrl    String
  ownerId     Int
  owner       User     @relation("UserPlants", fields: [ownerId], references: [id])
  createdAt   DateTime @default(now())
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  plants   Plant[] @relation("UserPlants")
}
